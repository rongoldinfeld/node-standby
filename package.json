{
  "name": "node-standby",
  "version": "1.0.2",
  "description": "A package that allows to create a standby process that can take over if the primary process fails for some reason",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "tsc",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "changeset": "changeset",
    "release": "pnpm run lint && pnpm run test && pnpm run build && changeset publish"
  },
  "author": "Ron Goldinfeld <rongoldinfeld56@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/rongoldinfeld/node-standby.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@jest/globals": "^29.5.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.10",
    "@types/redis-mock": "^0.17.1",
    "@types/uuid": "^9.0.1",
    "redis-mock": "^0.56.3",
    "ts-jest": "^29.1.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "jest": "^29.5.0"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "redis": "^4.6.5",
    "uuid": "^9.0.0"
  }
}