{
  "name": "node-standby",
  "version": "2.1.0",
  "description": "A package that allows to create a standby process that can take over if the primary process fails for some reason",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "tsc",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "changeset": "changeset",
    "release": "pnpm run lint && pnpm run test && pnpm run build && changeset publish"
  },
  "author": "Ron Goldinfeld <rongoldinfeld56@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/rongoldinfeld/node-standby.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@jest/globals": "^29.5.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.10",
    "@types/node-zookeeper-client": "^0.2.8",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "node-zookeeper-client": "^1.1.3"
  },
  "prettier": {
    "printWidth": 120
  },
  "keywords": [
    "real-time",
    "standby",
    "active-active",
    "failover",
    "leader-election"
  ]
}